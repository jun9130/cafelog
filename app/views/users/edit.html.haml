      .devise__form-group.mx-auto.col-4 
        = f.label :user_image, "プロフィール写真", class: 'devise__form-label' 
        = f.file_field :user_image, class: 'devise__form-input user_image__form-input'
      .devise__form-group.mx-auto.col-4.mt-5
        = f.submit ("保存"), class: 'devise-edit-button'
      .devise__form-group.mx-auto.col-4.pt-3.py-5
        = link_to "キャンセル", :back, class: 'devise-edit-button'
