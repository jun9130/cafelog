.container.mt-5
  #account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2 プロフィールの編集
        = link_to "キャンセル", :back, class: 'btn'
      .account-page__inner--right.user-form
        = form_for(current_user) do |f|
          .field
            .field-label
              = f.label :name, "名前"
            .field-input
              = f.text_field :name, autofocus: true
          .field
            .field-label
              = f.label :profile_description, "自己紹介"
            .field-input
              = f.text_field :profile_description
          .field
            .field-label
              = f.label :email, "メールアドレス"
            .field-input
              = f.email_field :email
          .actions
            = f.submit "保存", class: 'btn'